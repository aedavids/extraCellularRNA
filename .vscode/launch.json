{
    "configurations": [
        {
            "name": "upstreamPipelineCLI",
            "type": "python",
            "request": "launch",
            "module": "pipeline.upstreamPipeline",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/deconvolutionAnalysis/python/:${workspaceFolder}/src:${workspaceFolder}/terra/deseq/python"
            },     
            "cwd" : "${workspaceFolder}/deconvolutionAnalysis/python",
            "args": ["--colDataPath", "pipeline/dataFactory/test/data/testIntegration/colData.csv",
                    "--countDataPath", "pipeline/dataFactory/test/data/testIntegration/geneCounts.csv", 
                    "--deseqResultsDir", "pipeline/dataFactory/test/data/testSignatureGenes/1vsAll",
                    "--estimatedScalingFactors", "pipeline/dataFactory/test/data/testSignatureGenes/1vsAll/estimatedSizeFactors.csv",
                    "--findModule", "pipeline.dataFactory.test.exampleCreateSignatureGeneConfig",
                    "--outDir", "upstreamPipeline.out"                    
                ],
        },
        
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/deconvolutionAnalysis/python/:${workspaceFolder}/src:${workspaceFolder}/terra/deseq/python"
            },
            "cwd": "${fileDirname}"
        }
    ]
}